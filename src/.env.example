# Glance ESP32 Configuration
# Copy this file to .env and fill in your actual values

# WiFi Credentials (Required)
WIFI_SSID=Your_WiFi_Network_Name
WIFI_PASSWORD=Your_WiFi_Password

# GitHub Integration (Optional)
# Get this token from the Glance dashboard after signing in
GITHUB_TOKEN=ghp_your_github_token_here

# Device Configuration (Optional)
DEVICE_ID=esp32-001

# Example configurations for different environments:

# Home Network Example:
# WIFI_SSID=HomeNetwork
# WIFI_PASSWORD=MySecurePassword123

# Office Network Example:  
# WIFI_SSID=OfficeWiFi
# WIFI_PASSWORD=CompanyPassword

# Mobile Hotspot Example:
# WIFI_SSID=iPhone_Hotspot
# WIFI_PASSWORD=hotspot123