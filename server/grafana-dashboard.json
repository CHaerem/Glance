{
  "dashboard": {
    "uid": "glance-monitor",
    "title": "Glance - E-Ink Display Monitor",
    "tags": ["glance", "esp32", "battery"],
    "timezone": "browser",
    "refresh": "1m",
    "schemaVersion": 39,
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus",
          "current": {},
          "hide": 0,
          "includeAll": false,
          "multi": false,
          "options": [],
          "refresh": 1,
          "regex": ""
        },
        {
          "name": "loki_datasource",
          "type": "datasource",
          "query": "loki",
          "current": {},
          "hide": 0,
          "includeAll": false,
          "multi": false,
          "options": [],
          "refresh": 1,
          "regex": ""
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Battery Voltage",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "targets": [
          {
            "expr": "glance_device_battery_volts",
            "legendFormat": "{{device_id}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "volt",
            "min": 3.0,
            "max": 4.3,
            "color": { "mode": "palette-classic" },
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10,
              "spanNulls": true
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null },
                { "color": "red", "value": 3.3 },
                { "color": "yellow", "value": 3.5 },
                { "color": "green", "value": 3.7 }
              ]
            }
          }
        },
        "options": {
          "legend": { "displayMode": "list", "placement": "bottom" },
          "tooltip": { "mode": "multi" }
        }
      },
      {
        "id": 2,
        "title": "Battery Percentage",
        "type": "timeseries",
        "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "targets": [
          {
            "expr": "glance_device_battery_percent",
            "legendFormat": "{{device_id}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "color": { "mode": "palette-classic" },
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10,
              "spanNulls": true
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null },
                { "color": "red", "value": 15 },
                { "color": "yellow", "value": 30 },
                { "color": "green", "value": 50 }
              ]
            }
          }
        },
        "options": {
          "legend": { "displayMode": "list", "placement": "bottom" },
          "tooltip": { "mode": "multi" }
        }
      },
      {
        "id": 3,
        "title": "Current Battery %",
        "type": "stat",
        "gridPos": { "x": 0, "y": 8, "w": 6, "h": 4 },
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "targets": [
          {
            "expr": "glance_device_battery_percent",
            "legendFormat": "{{device_id}}",
            "refId": "A",
            "instant": true
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null },
                { "color": "red", "value": 15 },
                { "color": "yellow", "value": 30 },
                { "color": "green", "value": 50 }
              ]
            }
          }
        },
        "options": {
          "reduceOptions": { "calcs": ["lastNotNull"] },
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area"
        }
      },
      {
        "id": 4,
        "title": "Device Online",
        "type": "stat",
        "gridPos": { "x": 6, "y": 8, "w": 6, "h": 4 },
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "targets": [
          {
            "expr": "glance_device_online",
            "legendFormat": "{{device_id}}",
            "refId": "A",
            "instant": true
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              { "type": "value", "options": { "0": { "text": "Offline", "color": "red" } } },
              { "type": "value", "options": { "1": { "text": "Online", "color": "green" } } }
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null },
                { "color": "green", "value": 1 }
              ]
            }
          }
        },
        "options": {
          "reduceOptions": { "calcs": ["lastNotNull"] },
          "colorMode": "value",
          "graphMode": "none"
        }
      },
      {
        "id": 5,
        "title": "Charging Status",
        "type": "stat",
        "gridPos": { "x": 12, "y": 8, "w": 6, "h": 4 },
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "targets": [
          {
            "expr": "glance_device_charging",
            "legendFormat": "{{device_id}}",
            "refId": "A",
            "instant": true
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              { "type": "value", "options": { "0": { "text": "Not Charging", "color": "blue" } } },
              { "type": "value", "options": { "1": { "text": "Charging", "color": "green" } } }
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "blue", "value": null },
                { "color": "green", "value": 1 }
              ]
            }
          }
        },
        "options": {
          "reduceOptions": { "calcs": ["lastNotNull"] },
          "colorMode": "value",
          "graphMode": "none"
        }
      },
      {
        "id": 6,
        "title": "Brownout Events",
        "type": "stat",
        "gridPos": { "x": 18, "y": 8, "w": 6, "h": 4 },
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "targets": [
          {
            "expr": "glance_device_brownout_count_total",
            "legendFormat": "{{device_id}}",
            "refId": "A",
            "instant": true
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 1 },
                { "color": "red", "value": 5 }
              ]
            }
          }
        },
        "options": {
          "reduceOptions": { "calcs": ["lastNotNull"] },
          "colorMode": "value",
          "graphMode": "area"
        }
      },
      {
        "id": 7,
        "title": "WiFi Signal Strength",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 12, "w": 12, "h": 6 },
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "targets": [
          {
            "expr": "glance_device_signal_rssi_dbm",
            "legendFormat": "{{device_id}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "dBm",
            "color": { "mode": "palette-classic" },
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10,
              "spanNulls": true
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null },
                { "color": "red", "value": -80 },
                { "color": "yellow", "value": -70 },
                { "color": "green", "value": -50 }
              ]
            }
          }
        },
        "options": {
          "legend": { "displayMode": "list", "placement": "bottom" }
        }
      },
      {
        "id": 8,
        "title": "Display Updates (Total)",
        "type": "timeseries",
        "gridPos": { "x": 12, "y": 12, "w": 12, "h": 6 },
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "targets": [
          {
            "expr": "glance_device_display_updates_total",
            "legendFormat": "{{device_id}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10,
              "spanNulls": true
            }
          }
        },
        "options": {
          "legend": { "displayMode": "list", "placement": "bottom" }
        }
      },
      {
        "id": 9,
        "title": "Server Memory Usage",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 18, "w": 12, "h": 6 },
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "targets": [
          {
            "expr": "glance_server_memory_heap_used_bytes",
            "legendFormat": "Heap Used",
            "refId": "A"
          },
          {
            "expr": "glance_server_memory_rss_bytes",
            "legendFormat": "RSS",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "color": { "mode": "palette-classic" },
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            }
          }
        },
        "options": {
          "legend": { "displayMode": "list", "placement": "bottom" }
        }
      },
      {
        "id": 10,
        "title": "Server Uptime",
        "type": "stat",
        "gridPos": { "x": 12, "y": 18, "w": 6, "h": 6 },
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "targets": [
          {
            "expr": "glance_server_uptime_seconds",
            "legendFormat": "Uptime",
            "refId": "A",
            "instant": true
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null }
              ]
            }
          }
        },
        "options": {
          "reduceOptions": { "calcs": ["lastNotNull"] },
          "colorMode": "value",
          "graphMode": "none"
        }
      },
      {
        "id": 11,
        "title": "Wake Cycles (Total)",
        "type": "stat",
        "gridPos": { "x": 18, "y": 18, "w": 6, "h": 6 },
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "targets": [
          {
            "expr": "glance_device_wakes_total",
            "legendFormat": "{{device_id}}",
            "refId": "A",
            "instant": true
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "blue", "value": null }
              ]
            }
          }
        },
        "options": {
          "reduceOptions": { "calcs": ["lastNotNull"] },
          "colorMode": "value",
          "graphMode": "area"
        }
      },
      {
        "id": 12,
        "title": "Application Logs",
        "type": "logs",
        "gridPos": { "x": 0, "y": 24, "w": 24, "h": 8 },
        "datasource": { "type": "loki", "uid": "${loki_datasource}" },
        "targets": [
          {
            "expr": "{container=\"glance-server\"} | json",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": false,
          "showCommonLabels": false,
          "wrapLogMessage": true,
          "prettifyLogMessage": true,
          "enableLogDetails": true,
          "sortOrder": "Descending",
          "dedupStrategy": "none"
        }
      },
      {
        "id": 13,
        "title": "Errors & Warnings",
        "type": "logs",
        "gridPos": { "x": 0, "y": 32, "w": 16, "h": 8 },
        "datasource": { "type": "loki", "uid": "${loki_datasource}" },
        "targets": [
          {
            "expr": "{container=\"glance-server\"} |~ \"(?i)(error|warn|fail|exception)\"",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": false,
          "showCommonLabels": false,
          "wrapLogMessage": true,
          "prettifyLogMessage": true,
          "enableLogDetails": true,
          "sortOrder": "Descending",
          "dedupStrategy": "none"
        }
      },
      {
        "id": 14,
        "title": "Log Rate (lines/min)",
        "type": "timeseries",
        "gridPos": { "x": 16, "y": 32, "w": 8, "h": 8 },
        "datasource": { "type": "loki", "uid": "${loki_datasource}" },
        "targets": [
          {
            "expr": "sum(rate({container=\"glance-server\"}[1m])) * 60",
            "legendFormat": "All Logs",
            "refId": "A"
          },
          {
            "expr": "sum(rate({container=\"glance-server\"} |~ \"(?i)(error|fail)\"[1m])) * 60",
            "legendFormat": "Errors",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "color": { "mode": "palette-classic" },
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10,
              "spanNulls": true
            }
          },
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "Errors" },
              "properties": [
                { "id": "color", "value": { "mode": "fixed", "fixedColor": "red" } }
              ]
            }
          ]
        },
        "options": {
          "legend": { "displayMode": "list", "placement": "bottom" },
          "tooltip": { "mode": "multi" }
        }
      }
    ]
  },
  "overwrite": true
}
