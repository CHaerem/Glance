{
  "name": "glance-server",
  "version": "1.0.0",
  "description": "Simple local server for Glance ESP32 e-ink display",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "build:preview": "node preview/build-preview.js",
    "preview:serve": "npm run build:preview && cd preview && python3 -m http.server 8080",
    "init:storage": "node scripts/init-storage.js"
  },
  "dependencies": {
    "@huggingface/inference": "^4.13.1",
    "@qdrant/js-client-rest": "^1.15.1",
    "@xenova/transformers": "^2.17.2",
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "openai": "^6.3.0",
    "sharp": "^0.34.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "cheerio": "^1.1.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "e-ink",
    "esp32",
    "display",
    "api"
  ],
  "author": "Glance Project",
  "license": "MIT",
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 60000,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "*.js",
      "services/**/*.js",
      "utils/**/*.js",
      "routes/**/*.js",
      "!coverage/**",
      "!node_modules/**",
      "!jest.setup.js",
      "!**/*.test.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "moduleNameMapper": {
      "^@xenova/transformers$": "<rootDir>/__mocks__/@xenova/transformers.js"
    }
  }
}
