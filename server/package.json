{
  "name": "glance-server",
  "version": "1.0.0",
  "description": "Simple local server for Glance ESP32 e-ink display",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "tsc",
    "build:check": "tsc --noEmit",
    "build:frontend": "vite build",
    "build:frontend:watch": "vite build --watch",
    "build:frontend:check": "tsc -p tsconfig.frontend.json --noEmit",
    "build:all": "npm run build && npm run build:frontend",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:perf": "playwright test e2e/performance.spec.ts --project=chromium",
    "build:preview": "node preview/build-preview.js",
    "preview:serve": "npm run build:preview && cd preview && python3 -m http.server 8080",
    "init:storage": "node scripts/init-storage.js",
    "test:memory": "jest --testPathPattern=memory",
    "sync:art": "node scripts/sync-art-library.js",
    "sync:art:dry": "node scripts/sync-art-library.js --dry-run",
    "sync:wikidata": "node scripts/sync-art-wikidata.js",
    "sync:wikidata:dry": "node scripts/sync-art-wikidata.js --dry-run",
    "sync:wikidata:artists": "node scripts/sync-art-wikidata.js --artists-only"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "jsonwebtoken": "^9.0.3",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "openai": "^6.3.0",
    "sharp": "^0.34.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "vite": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.19.28",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.8",
    "cheerio": "^1.1.2",
    "jest": "^29.7.0",
    "lighthouse": "^13.0.1",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "e-ink",
    "esp32",
    "display",
    "api"
  ],
  "author": "Glance Project",
  "license": "MIT"
}
